<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<bean id="userCrudService" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="main.service.crud.user.user.UserCrudService" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="userRoleCrudService" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="main.service.crud.user.userrole.UserRoleCrudService" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="courseCrudService" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="main.service.crud.course.course.CourseCrudService" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="courseTypeCrudService" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="main.service.crud.course.coursetype.CourseTypeCrudService" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="gradeCrudService" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="main.service.crud.course.grade.GradeCrudService" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="homeworkCrudService" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="main.service.crud.course.homework.HomeworkCrudService" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="testCrudService" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="main.service.crud.course.test.TestCrudService" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="languageCrudService" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="main.service.crud.language.LanguageCrudService" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="placementTestCrudService" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="main.service.crud.placementtest.PlacementTestCrudService" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="placementTestResultCrudService" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="main.service.crud.user.placementtestresult.PlacementTestResultCrudService" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="labelProvider" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="main.util.labels.LabelProvider" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="currentUserService" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="main.util.currentUser.CurrentUserService" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="domainURIProvider" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="main.util.domain.DomainURIProvider" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="tokenProvider" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="main.util.token.TokenProvider" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="courseMembershipValidator" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="main.util.coursemembership.validator.CourseMembershipValidator" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="localeResolver" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="org.springframework.web.servlet.LocaleResolver" />
			</bean>
		</constructor-arg>
	</bean>

	<context:component-scan base-package="main.dao, main.json, main.model, main.security, main.service, main.util">
		<context:exclude-filter type="regex" expression="main.service.model.user.user.UserCrudServiceImpl" />
		<context:exclude-filter type="regex" expression="main.service.model.user.userrole.UserRoleCrudServiceImpl" />
		<context:exclude-filter type="regex" expression="main.service.model.language.LanguageCrudServiceImpl" />
		<context:exclude-filter type="regex" expression="main.service.model.placementtest.PlacementTestCrudServiceImpl" />
		<context:exclude-filter type="regex" expression="main.service.model.user.placementtestresult.PlacementTestResultServiceImpl" />
		<context:exclude-filter type="regex" expression="main.service.model.course.course.CourseCrudServiceImpl" />
		<context:exclude-filter type="regex" expression="main.service.model.course.coursetype.CourseTypeCrudServiceImpl" />
		<context:exclude-filter type="regex" expression="main.service.crud.course.grade.GradeCrudService" />
		<context:exclude-filter type="regex" expression="main.service.crud.course.homework.HomeworkCrudServiceImpl" />
		<context:exclude-filter type="regex" expression="main.service.crud.course.test.TestCrudServiceImpl" />
		<context:exclude-filter type="regex" expression="main.util.labels.LabelProviderImpl" />
		<context:exclude-filter type="regex" expression="main.util.currentUser.CurrentUserServiceImpl" />
		<context:exclude-filter type="regex" expression="main.util.domain.DomainURIProvider" />
		<context:exclude-filter type="regex" expression="main.util.token.TokenProviderImpl" />
		<context:exclude-filter type="regex" expression="main.util.courseMembership.validator.CourseMembershipValidatorImpl" />
	</context:component-scan>

    <context:property-placeholder properties-ref="deployProperties" />
    <bean id="deployProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean" p:location="file:WebContent/WEB-INF/resources/application.properties" />
	
    <import resource="file:WebContent/WEB-INF/config/context-files/spring-database.xml" />
    <import resource="file:WebContent/WEB-INF/config/context-files/spring-security-oauth.xml" />
    <import resource="file:WebContent/WEB-INF/config/context-files/spring-security.xml" />
    <import resource="test-context-mail.xml" />

</beans>