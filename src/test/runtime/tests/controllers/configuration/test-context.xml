	<bean id="localeCodeProvider" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg>
			<bean class="java.lang.Class" factory-method="forName">
				<constructor-arg value="main.util.locale.LocaleCodeProvider" />
